{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:write-files",
    "fs:write-all",
    "fs:allow-open",
    "fs:read-files",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$APPDATA" }, { "path": "$APPDATA/**" }, {"path": "**/*"}]
    }
  ]

}